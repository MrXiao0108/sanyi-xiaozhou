<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dzics.data.ums.db.dao.SysUserRoleDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dzics.data.ums.model.entity.SysUserRole">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="org_code" property="orgCode"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, role_id, org_code, del_flag, create_by, create_time, update_by, update_time
    </sql>
    <select id="getListRoleCode" resultType="com.dzics.data.ums.model.entity.SysRole">
        SELECT
                ro.role_code as roleCode,
                ro.role_id
            FROM
                sys_user_role AS usro
            LEFT JOIN sys_role ro ON usro.role_id = ro.role_id
            WHERE
                usro.user_id = #{id}
            AND usro.del_flag = 0
            AND ro.del_flag = 0
            AND ro.status = 1
            AND ro.org_code =  #{useOrgCode}
    </select>
    <select id="listRoleId" resultType="java.lang.String">
         SELECT
                ro.role_id
            FROM
                sys_user_role AS usro
            LEFT JOIN sys_role ro ON usro.role_id = ro.role_id
            WHERE
                usro.user_id = #{id}
            AND usro.del_flag = 0
            AND ro.del_flag = 0
            AND ro.org_code =  #{useOrgCode}
<!--            AND ro.basics_role = #{code}-->
    </select>


</mapper>
